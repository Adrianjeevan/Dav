<script is:inline>
  const header = document.getElementById("header");

  let lastScrollPosition = 0;

  window.addEventListener('load' , ()=> {
    if (window.location.pathname === "/") {
        document.querySelector(".m-icon").src = "/images/new-menu.png";
      } else  {
        document.querySelector(".m-icon").src = "/images/menu.png";
      }
  })
  
  

  window.addEventListener("scroll", () => {
    const currentScrollPosition = window.scrollY;

    if (currentScrollPosition > lastScrollPosition) {
      header.classList.add("animate__fadeInDown");
      if (window.location.pathname === "/") {
        document.querySelector(".m-icon").src = "/images/menu.png";
      } else  {
        document.querySelector(".m-icon").src = "/images/menu.png";
      }
    } else {
      header.classList.remove("animate__fadeInDown");
      if (window.location.pathname === "/") {
        document.querySelector(".m-icon").src = "/images/new-menu.png";
      } else {
        document.querySelector(".m-icon").src = "/images/menu.png";
      }
    }

    lastScrollPosition = currentScrollPosition;
  });

  window.addEventListener("scroll", function () {
    var header = document.querySelector("header");

    header.classList.toggle("sticky", window.scrollY > 0);
  });

  const buttons = document.getElementById("menu-btn");
  const headers = document.getElementById("header");
  const menu = document.getElementById("menus");
  const close = document.getElementById("close");

  buttons.addEventListener("click", function () {
    headers.classList.toggle("active");
    menu.classList.toggle("left");
  });

  close.addEventListener("click", function () {
    headers.classList.toggle("active");
    menu.classList.toggle("left");
  });

  const sub = document.querySelector('.submenu-wrapper')
  const subs = document.querySelector('.subs')

  sub.addEventListener('click', ()=> {
    subs.classList.toggle('view')
  })
</script>

