---
const {  name , role, message, image} = Astro.props
---

<div class="text-center test-card">
   <div>
    <div>
        <img src={image} alt="" />
    </div>

    <div>
        <h5 class="sub-title2">
            {name}
        </h5>
        <p>{role}</p> 
        <p class="message">{message}</p>
    </div>

   </div>
    
</div>

<style lang="scss">
    .test-card{
        width:50%;
        background-color: rgba(2, 27, 57, 0.891);
        border-radius: 20px;
        height: 400px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem ;
        // padding: 2rem;
        color: white;

        >:nth-child(1){
            display: flex;
            flex-direction: column;
            gap: 1rem;

            >:nth-child(2){
                display: flex;
            flex-direction: column;
            gap: 1rem;

            }
        }

        img{
            max-width: 50px;
        }

        @media screen and (max-width:500px) {
            width: 100%;

            .message{
            width: 90% !important;
            margin: 0 auto;
            text-align: justify;
        }
        }

        .message{
            width: 70%;
            margin: 0 auto;
            
        }
    }
</style>