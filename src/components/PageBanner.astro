---
const {title, secondtitle} = Astro.props
---

<div style="background-color: rgb(233, 233, 233);">
    <div class="container">
        <div class="pagebanner">
            <a href="">Home 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
              </svg>
            
            </a> 
              <p>{title}</p>
               
              {secondtitle &&     <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
              </svg>}
             
            
              <p>{secondtitle}</p>
        </div>
    </div>
</div>

<style lang="scss">
.pagebanner{
    margin-top: 132px !important;
    
    display: flex;
    gap:10px;
    align-items: center;
    padding: 1rem;
    

    a,  p {
        font-size: 14px;
    }

    svg{
        width: 10px;
        height: 10px;
        stroke-width: 2px;
        stroke: black;
    }
}
</style>