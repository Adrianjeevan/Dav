---
import Section from "./Section.astro";
import SectionTitle from "./SectionTitle.astro";
import Button from "./Button.astro";
import Eventcard from "./Eventcard.astro";
---

<Section>
  <div class="container">
    <div class="events">



      <div class="row gy-5 justify-content-between">
        <div class="col-lg-5">
            <SectionTitle
            title="Events"
            subtitle="Upcoming Education Events to feed your brain."
          /> 
        </div>
        <div class="col-lg-3  text-end">
            <Button  title="View more" variant="light" />
        </div>
      </div>

      

      <div class="d-flex flex-column gap-5 pt-5">
        <Eventcard date="15" month="December" name=" Applying Natural Laws to Technology and Society" time="10:00 AM" image="/images/kids.jpg " link="/events"/>
      
      <Eventcard date="15" month="December" name=" Applying Natural Laws to Technology and Society" time="10:00 AM" image="/images/kids.jpg " link="/events"/>
      </div>



    </div>
  </div>
</Section>

<style lang="scss">
.events{
.row{
    @media  screen and (max-width: 991px) {
        >:nth-child(2){
            text-align: left !important;
          
        }
    }
}
}
</style>
