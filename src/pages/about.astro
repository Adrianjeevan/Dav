</Layout>

<style lang="scss">

  .statue{
    height: 50vh;
    img{
      width: 100%;
      height: 100%;
      object-fit: cover;

    }
  }
  .numbers {
    display: flex;
    justify-content: center;
    gap: 2rem;

    @media screen and (max-width:991px) {
        flex-direction: column;
        align-items: center;

        .box{
          height: 250px !important;
            >div{
                height: 100% !important;
            }
        }
  
    }

    > :nth-child(1) {
      h4{
          color: rgb(76, 120, 10);
        }
      &:hover {
        > div {
          border-bottom: solid 5px greenyellow !important;
        }
      }
    }
    > :nth-child(2) {
      color:rgb(47, 64, 255)  ;
      &:hover {
        > div {
          border-bottom: solid 5px rgb(47, 64, 255) !important;
        }
      }
    }
    > :nth-child(3) {
      color:  rgb(227, 185, 33) ;
      &:hover {
        > div {
          border-bottom: solid 5px rgb(227, 185, 33) !important;
        }
      }
    }
    > :nth-child(4) {
      color: rgb(217, 82, 84);
      &:hover {
        > div {
          border-bottom: solid 5px rgb(217, 82, 84) !important;
        }
      }
    }

    
    .box {
      height: 400px;
      width: 250px;

      display: flex;
      justify-content: center;
      align-items: flex-end;

     

      .boxes {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        // transition: var(--transition);
        border-radius: 10px;
        height: 80%;
        width: 100%;
        background-color: rgb(247, 247, 247);
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;

        h4{
          text-align: center;
          font-size: 35px;
          font-weight: bold;

        }

        p{
          font-weight: bold;
        }
      }
      img {
        max-width: 80px;
        
        
        transition: var(--transition);
      }
    }

    .top {
      align-items: flex-start !important;
    }
  }

  .belives{
    ul, p{
        width: 70%;
        margin: 0 auto;

        @media screen and (max-width:991px) {
          width: 90%;
        }
    }

    ul{
        // padding-left: 1.5rem;
        list-style: none;
        // list-style:symbols(right-arrow) !important;

        li{
            padding-bottom: 1rem;
            text-align: justify;
            display: flex;
            gap: 20px;

            span{
              color: var(--brown);
            }
        }
    }
  }

  .members{
    display: grid;
    grid-template-columns: repeat(3 , 1fr);
    
    place-items: center;
    row-gap: 5rem;
    padding: 3rem 0;

  

    @media screen and (max-width:991px) {
        grid-template-columns: repeat(2 , 1fr) !important;
  
    }

    @media screen and (max-width:500px) {
        grid-template-columns: repeat(1 , 1fr) !important;

        .member-card{
       
        align-items: center;
        
        .images{
            width: 180px !important; 
            height: 180px !important;
            border-radius: 180px !important;
           

            img{
               
                border-radius: 180px !important;
              
            }
        }
    }
  
    }

    .member-card{
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        .images{
            width: 300px;
            height: 300px;
            border-radius: 300px;
            overflow: hidden;
            border: dashed 2px var(--brown);
            padding: 10px;

            img{
                object-fit: cover !important;
                width: 100%;
                border-radius: 300px;
                height: 100%;
            }
        }
    }
  }
</style>
